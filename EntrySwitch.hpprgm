// JMB 2026-01
#pragma mode( separator(.,;) integer(h32) )

KEY K_On()
// On key: Toggle Entry mode between Textbook and RPN
BEGIN
  IF Entry ≠ 2 THEN
    Entry := 2; // RPN
  ELSE
    Entry := 0; // Textbook
  END;
  STARTVIEW(-1);
END;

KEY KA_Dot()
// Alpha+Dot keys: Toggle display format between ENG and STD
BEGIN
  IF HFormat ≠ 3 THEN
    HFormat := 3; // ENG
  ELSE
    HFormat := 0; // STD
  END;
  STARTVIEW(-1);
END;